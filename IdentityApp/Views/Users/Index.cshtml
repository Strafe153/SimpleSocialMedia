@model IdentityApp.ViewModels.FilterSortPageViewModel

@{
    ViewBag.Title = "All users";
}

<form method="get">
    <div class="form-inline mb-2">
        <label for="name" class="control-label">Name:</label>
        <input type="text" name="UserName" class="form-control mr-2"
               value="@Model.FilterViewModel.SelectedUserName" />

        <label for="email" class="control-label">Email:</label>
        <input type="text" name="Email" class="form-control mr-2"
               value="@Model.FilterViewModel.SelectedEmail" />

        <label for="year" class="control-label">Year:</label>
        <input type="number" name="Year" class="form-control mr-2"
               value="@Model.FilterViewModel.SelectedYear" />

        <label for="country" class="control-label">Country:</label>
        <input type="text" name="Country" class="form-control mr-2"
               value="@Model.FilterViewModel.SelectedCountry" />

        <input type="submit" value="Filter" class="btn btn btn-outline-dark" />
    </div>
</form>

<table class="table">
    <tr>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@Model.SortViewModel.NameSort"
               asp-route-userName="@Model.FilterViewModel.SelectedUserName"
               asp-route-email="@Model.FilterViewModel.SelectedEmail"
               asp-route-year="@Model.FilterViewModel.SelectedYear"
               asp-route-country="@Model.FilterViewModel.SelectedCountry">
                Username
            </a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@Model.SortViewModel.EmailSort"
               asp-route-userName="@Model.FilterViewModel.SelectedUserName"
               asp-route-email="@Model.FilterViewModel.SelectedEmail"
               asp-route-year="@Model.FilterViewModel.SelectedYear"
               asp-route-country="@Model.FilterViewModel.SelectedCountry">
                Email
            </a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@Model.SortViewModel.YearSort"
               asp-route-userName="@Model.FilterViewModel.SelectedUserName"
               asp-route-email="@Model.FilterViewModel.SelectedEmail"
               asp-route-year="@Model.FilterViewModel.SelectedYear"
               asp-route-country="@Model.FilterViewModel.SelectedCountry">
                Year
            </a>
        </th>
        <th>
            <a asp-action="Index"
               asp-route-sortOrder="@Model.SortViewModel.CountrySort"
               asp-route-userName="@Model.FilterViewModel.SelectedUserName"
               asp-route-email="@Model.FilterViewModel.SelectedEmail"
               asp-route-year="@Model.FilterViewModel.SelectedYear"
               asp-route-country="@Model.FilterViewModel.SelectedCountry">
                Country
            </a>
        </th>
    </tr>

    @foreach (User user in Model.Users)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@user?.Year</td>
            <td>@user.Country</td>
            <td>
                <form asp-action="Delete" 
                      asp-route-userId="@user.Id"
                      asp-route-returnUrl="@Context.Request.Path"
                      method="post">
                    <a asp-action="Edit" 
                       asp-controller="Account" 
                       asp-route-userId="@user.Id"
                       asp-route-returnUrl="@Context.Request.Path"
                       class="btn btn-sm btn-primary">
                        Edit
                    </a>
                    <input type="submit" value="Delete" 
                           class="btn btn-sm btn-danger" />
                </form>
            </td>
        </tr>
    }
</table>

@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.CurrentPageNumber - 1)"
       asp-route-userName="@Model.FilterViewModel.SelectedUserName"
       asp-route-email="@Model.FilterViewModel.SelectedEmail"
       asp-route-year="@Model.FilterViewModel.SelectedYear"
       asp-route-country="@Model.FilterViewModel.SelectedCountry"
       asp-route-sortOrder="@Model.SortViewModel.CurrentSort"
       class="btn btn-outline-dark">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Previous
    </a>
}

<input type="submit" value="@Model.PageViewModel.CurrentPageNumber" 
       class="btn btn-outline-dark" disabled />

@if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="Index"
       asp-route-page="@(Model.PageViewModel.CurrentPageNumber + 1)"
       asp-route-userName="@Model.FilterViewModel.SelectedUserName"
       asp-route-email="@Model.FilterViewModel.SelectedEmail"
       asp-route-year="@Model.FilterViewModel.SelectedYear"
       asp-route-country="@Model.FilterViewModel.SelectedCountry"
       asp-route-sortOrder="@Model.SortViewModel.CurrentSort"
       class="btn btn-outline-dark">
        <i class="glyphicon glyphicon-chevron-right"></i>
        Next
    </a>
}