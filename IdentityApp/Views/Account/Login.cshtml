@model IdentityApp.ViewModels.LoginViewModel 

<form asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label><br />
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label><br />
        <input type="password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="RememberMe" class="control-label"></label>
        <input type="checkbox" asp-for="RememberMe" />
    </div>
    <div class="form-group">
        <input type="submit" value="Log In" class="btn btn-primary" />
    </div>
</form>