@using System.IO
@model IdentityApp.ViewModels.EditUserViewModel

@{
    ViewBag.Title = $"Editing {Model.UserName}";

    byte[] imageData = null;

    if (Model.ProfilePicture != null)
    {
        using (BinaryReader binaryReader = new BinaryReader(
            Model.ProfilePicture.OpenReadStream()))
        {
            imageData = binaryReader.ReadBytes(
                (int)Model.ProfilePicture.Length);
        }
    }
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"
         class="validation alert alert-danger" role="alert"></div>

    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="Email" value="@Model.Email" />
    <input type="hidden" asp-for="CalledFromAction"
           value="@Model.CalledFromAction" />
    <input type="hidden" asp-for="AuthenticatedUserRoles"
           value="@Model.AuthenticatedUserRoles" />

    <div class="form-group">
        <label asp-for="ProfilePicture" class="control-label"></label><br />
        <img class="border border-3 border-secondary rounded-circle"
             src="data:image/jpeg;base64,@(Convert.ToBase64String(imageData))"
             id="profile-pic" alt="profile_picture" /><br />
        <div class="form-group custom-file mt-3">
            <label class="custom-file-label" for="custom-file">
                Choose a picture
            </label>
            <input type="file" asp-for="ProfilePicture" id="profile-pic-input"
                   class="custom-file-input" accept="image/jpeg,image/png"
                   onchange="loadFile(event)" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="UserName" class="control-label"></label><br />
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label"></label><br />
        <input type="number" asp-for="Year" class="form-control" />
        <span asp-validation-for="Year"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label><br />
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status"></span>
    </div>
    <div class="form-group">
        <label asp-for="Country" class="control-label"></label><br />
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country"></span>
    </div>
    <div class="form-group">
        <label asp-for="City" class="control-label"></label><br />
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City"></span>
    </div>
    <div class="form-group">
        <label asp-for="Company" class="control-label"></label><br />
        <input asp-for="Company" class="form-control" />
        <span asp-validation-for="Company"></span>
    </div>

    <div class="form-group">
        @if (Model.CalledFromAction.Contains("Users"))
        {
            <a asp-action="Index"
               asp-controller="Users"
               class="btn btn-outline-secondary">
                Cancel
            </a>
        }
        else
        {
            <a asp-action="Index"
               asp-controller="Account"
               asp-route-userName="@Model.UserName"
               class="btn btn-outline-secondary">
                Cancel
            </a>
        }

        <input type="submit" value="Save" class="btn btn-primary" />

        <div class="float-right">
            <a asp-action="ChangePassword"
               asp-controller="Users"
               asp-route-userId="@Model.Id"
               asp-route-returnUrl="@Model.CalledFromAction"
               class="btn btn-secondary">
                Change Password
            </a>

            @if (Model.AuthenticatedUserRoles.Contains("admin"))
            {
                <a asp-action="Edit"
                   asp-controller="Roles"
                   asp-route-userId="@Model.Id"
                   asp-route-returnUrl="@Model.CalledFromAction"
                   class="btn btn-secondary">
                    Change Roles
                </a>
            }

            <a asp-action="Delete" 
               asp-controller="Users" 
               asp-route-userId="@Model.Id"
               asp-route-returnUrl="@Model.CalledFromAction"
               class="btn btn-danger">
                Delete
            </a>
        </div>
    </div>
</form>