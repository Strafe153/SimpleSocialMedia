@model IdentityApp.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = Model.User.UserName;

    string url = Context.Request.Path;
    string path = Context.Request.QueryString.ToString();

    User currentUser = Model.UserManager.Users.FirstOrDefault(u => u.UserName == User.Identity.Name);
}

<link href="~/css/account_profile.css" rel="stylesheet" />

<img id="profile-pic" class="border border-4 border-secondary rounded mb-2"
     src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.User.ProfilePicture))"
     alt="profile_picture" />

<div class="d-inline">
    <span class="align-top ">@Model.User.UserName</span><br />
    <span class="align-top">@Model.User.Email</span>
    <span>@Model.User.Status</span>
</div>

<div>
    <a asp-action="Create" asp-controller="Post" asp-route-userId="@Model.User.Id"
       class="btn btn-primary">Create Post</a>
    <a asp-action="Edit" asp-controller="Account" asp-route-userId="@Model.User.Id"
       class="btn btn-primary float-right">Edit Profile</a>
</div>


<p>@url</p>
<p>@path</p>


@if (Model.Posts.Count() > 0)
{
    @foreach (Post post in Model.Posts)
    {
        post.PostPictures = (from postPic in post.PostPictures
                             orderby postPic.UploadedTime
                             select postPic).ToList();

        <div class="border border-secondary rounded p-2 my-2">
            <p>@post.Content</p>

            @foreach (PostPicture postPicture in post.PostPictures)
            {
                <img height="150" src="data:image/jpeg;base64,@(Convert.ToBase64String(postPicture.PictureData))"
                     alt="post_picture" />
            }

            <div class="mt-2">
                @if (Model.User.LikedPosts.FirstOrDefault(p => p.Post.Id == post.Id) != null)
                {
                    <a asp-action="Like" asp-controller="Post" asp-route-postId="@post.Id"
                       asp-route-userId="@currentUser.Id"
                       class="btn btn-sm btn-primary px-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart align-middle" viewBox="0 0 16 16">
                            <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                        </svg>
                        <span id="likes-count">@post.Likes</span>
                    </a>
                }
                else
                {
                    <a asp-action="Like" asp-controller="Post" asp-route-postId="@post.Id"
                       asp-route-userId="@currentUser.Id"
                       class="btn btn-sm btn-outline-primary px-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart align-middle" viewBox="0 0 16 16">
                            <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                        </svg>
                        <span id="likes-count">@post.Likes</span>
                    </a>
                }
                <div class="d-inline float-right">
                    <sub class="posted-time">@post.PostedTime.ToString("HH:mm:ss dd.MM.yyyy")</sub>
                    @if (post.IsEdited)
                    {
                        <sub class="posted-time">(edited)</sub>
                    }
                    <a asp-action="Edit" asp-controller="Post" asp-route-postId="@post.Id"
                       class="btn btn-outline-secondary">Edit</a>
                </div>
            </div>
        </div>
    }
}

@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-action="Index"
       asp-route-userName="@Model.User.UserName"
       asp-route-page="@(Model.PageViewModel.CurrentPageNumber - 1)"
       class="btn btn-outline-dark">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Previous
    </a>
}  

<input type="submit" value="@Model.PageViewModel.CurrentPageNumber" class="btn btn-outline-dark" disabled />

@if (Model.PageViewModel.HasNextPage)
{
    <a asp-action="Index"
       asp-route-userName="@Model.User.UserName"
       asp-route-page="@(Model.PageViewModel.CurrentPageNumber + 1)"
       class="btn btn-outline-dark">
        <i class="glyphicon glyphicon-chevron-right"></i>
        Next
    </a>
}