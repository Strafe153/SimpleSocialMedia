@model IdentityApp.ViewModels.EditPostViewModel

@{
    ViewData["Title"] = "Editing a post";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <input type="hidden" asp-for="UserId" value="@Model.UserId" />
    <input type="hidden" asp-for="PostedTime" value="@DateTime.Now.ToString("dd.MM.yyyy HH:mm:ss")" />

    <div class="form-group">
        <label for="post">Post</label><br />
        <textarea id="post" asp-for="Content" class="form-control" rows="8"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</form>