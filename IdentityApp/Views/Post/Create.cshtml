@model IdentityApp.ViewModels.CreatePostViewModel 

@{
    ViewData["Title"] = "Creating a post";
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Post.PostedTime" value="@DateTime.Now" />
    <input type="hidden" asp-for="Post.User.UserName" value="@Model.User.UserName" />
    <input type="hidden" asp-for="Post.User.Id" value="@Model.User.Id" />
    <input type="hidden" asp-for="Post.Id" value="@System.Guid.NewGuid().ToString()" />

    <div class="form-group">
        <label for="post">Post</label><br />
        <textarea id="post" asp-for="Post.Content" class="form-control" rows="8"></textarea>
        <input type="file" asp-for="PostPictures" multiple />
    </div>
    <div class="form-group">
        <input type="submit" value="Post" class="btn btn-primary" />
    </div>
</form>